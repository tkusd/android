<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#BBDEFB">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_large"
    android:paddingRight="@dimen/padding_large"
    android:orientation="vertical"
   >

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fletTextAppearance="@style/setting_floatlabelededittext"
        app:fletPaddingBottom="5dp">

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="@dimen/padding_smaill"
        android:paddingLeft="@dimen/padding_smaill"
        android:background="@drawable/pressedittext"
        android:textColorHint="@color/text_hint"
        android:hint="@string/label_name"
        android:textColor="@color/text_blue" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>


    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fletTextAppearance="@style/setting_floatlabelededittext"
        app:fletPaddingBottom="5dp">

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="@dimen/padding_smaill"
        android:paddingLeft="@dimen/padding_smaill"
        android:inputType="textEmailAddress"
        android:background="@drawable/pressedittext"
        android:textColorHint="@color/text_hint"
        android:hint="@string/label_email"
        android:textColor="@color/text_blue" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        >
        <Button
            android:id="@+id/btn_updateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新"
            android:background="@drawable/bluebtn_shape"
            android:textColor="@color/white"
            android:foregroundGravity="center_vertical"
            android:layout_alignParentLeft="true" />
        <Button
            android:id="@+id/btn_deleteAccount"
            android:layout_toRightOf="@+id/btn_updateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刪除帳號"
            android:background="@drawable/delbtn_shape"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/margin_medium" />

    </RelativeLayout>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fletTextAppearance="@style/setting_floatlabelededittext"
        app:fletPaddingBottom="5dp">
    <EditText
        android:id="@+id/edtOldPass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="@dimen/padding_smaill"
        android:paddingLeft="@dimen/padding_smaill"
        android:inputType="textPassword"
        android:background="@drawable/pressedittext"
        android:textColorHint="@color/text_hint"
        android:hint="Old password"
        android:textColor="@color/text_blue" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fletTextAppearance="@style/setting_floatlabelededittext"
        app:fletPaddingBottom="5dp">
    <EditText
        android:id="@+id/edtNewPass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="@dimen/padding_smaill"
        android:paddingLeft="@dimen/padding_smaill"
        android:inputType="textPassword"
        android:background="@drawable/pressedittext"
        android:textColorHint="@color/text_hint"
        android:hint="New password"
        android:textColor="@color/text_blue" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <Button
        android:id="@+id/btn_updatePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="變更密碼"
        android:background="@drawable/bluebtn_shape"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_medium" />

</LinearLayout>
</ScrollView>
