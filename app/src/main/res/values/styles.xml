<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppNoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/text_white</item>
        <item name="android:homeAsUpIndicator">@mipmap/ic_action_back</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="actionMenuTextColor">@color/text_white</item>
        <item name="homeAsUpIndicator">@mipmap/ic_action_back</item>

    </style>

    <!-- general styles for the action bar -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="background">@drawable/actionbar</item>

    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/text_black</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>


    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>

    </style>

    <!-- toolbar menu -->
    <style name="Theme.Toolbar.Menu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/holo_light</item>
        <item name="android:textColorPrimary">@color/text_black</item>
    </style>

    <!-- float edittext color -->
    <style name="floatlabelededittext">
        <item name="android:textColor">@color/text_white</item>
    </style>

</resources>
