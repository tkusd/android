<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.tkusd.appstudio" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".app.LoginActivity"
            android:label="Login"
            android:theme="@style/AppNoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.SignupActivity"
            android:label="Sign up"
            android:theme="@style/AppNoActionBar" >
        </activity>
        <activity
            android:name=".app.ProjectListActivity"
            android:label="@string/title_activity_project_list"
            android:theme="@style/AppNoActionBar" >
        </activity>
        <activity
            android:name=".app.SettingActivity"
            android:label="Setting"
            android:theme="@style/CustomActionBarTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.ProjectListActivity" />
        </activity>
        <activity
            android:name=".app.ForgetActivity"
            android:label="@string/title_activity_forget"
            android:theme="@style/AppNoActionBar" >
        </activity>
    </application>

</manifest>
