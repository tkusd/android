<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.tkusd.appstudio" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".app.LoginActivity"
            android:label="Login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.SignupActivity"
            android:label="Sign up" >
        </activity>
        <activity
            android:name=".app.WelcomeActivity"
            android:label="Welcome" >
        </activity>
        <activity
            android:name=".app.ProjectListActivity"
            android:label="@string/title_activity_project_list" >
        </activity>
    </application>

</manifest>
